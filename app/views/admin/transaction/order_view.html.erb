<% provide(:title, "Order") %>
<div id="page-wrapper" class="gray-bg">
	<%= render "admin/includes/header" %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= admin_dashboard_url %>">Dashboard</a>
        </li>
        <li>
         <a href="<%= admin_order_list_url %>">Manage Order</a>
       </li>
       <li class="active">
         <strong>View Order</strong>
       </li>
     </ol>
   </div>
   <div class="col-lg-2">
   </div>
 </div>
 <div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>View Order</h5>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><b>User Information</b></td>
                    <td></td>
                  </tr>
                 
                  <tr>
                    <td>First Name:</td>
                    <td><%= @order.name %></td>
                  </tr>
                  <tr>
                    <td>Last Name:</td>
                    <td><%= @order.surname %></td>
                  </tr>
                  <tr>
                    <td>User Email:</td>
                    <td><%= @order.email_address %></td>
                  </tr>
                  <tr>
                    <td>Mobile No.:</td>
                    <td><%= @order.mobile_no %></td>
                  </tr>
                  <tr>
                    <td>Gender:</td>
                     <td><% if @order.gender == "1" %>
                        <%= "Male" %>
                        <% else %>
                        <%= "Female" %>
                        <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td>Date of birth:</td>
                    <td><%= @order.date_of_birth %></td>
                  </tr>
                  <tr>
                    <td>Home Country:</td>
                    <td><%= @order.country_of_citizenship %></td>
                  </tr>
                  <tr>
                    <td>Passport No.:</td>
                    <td><%= @order.passport_no %></td>
                  </tr>
                  <tr>
                    <td>Address:</td>
                    <td><%= @order.aus_address.to_s %></td>
                  </tr>

                </tbody>
              </table>
            </div>   
            <div class="col-md-6 col-sm-6 col-xs-12">
              <table class="table table-user-information">
                <tbody> 
                  <tr>
                    <td><b>Order Information</b></td>
                    <td></td>
                  </tr>
                  <tr>
                    <td>Order Date:</td>
                    <td><%= @order.created_at.strftime('%d-%m-%Y') %></td>
                  </tr>  
                  <tr>
                    <td>Product No.:</td>
                    <td><%= @order.product_number %></td>
                  </tr>
                  <tr>
                    <td>Product Name:</td>
                    <td><%= @order.title %>
                    </td>
                  </tr>
                  <tr>
                    <td>Amount:</td>
                    <td><%= @order.order_amt %></td>
                  </tr>
                  <tr>
                    <td>Payment Status:</td>
                    <td><% if @order.payment_status == "0" %>
                        <%= "Unpaid" %>
                        <% else %>
                        <%= "Paid" %>
                        <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td>Category Name:</td>
                    <td><%= @order.category_name %></td>
                  </tr>
                  <tr>
                    <td>Family Type:</td>
                    <td><%= @order.family_type %></td>
                  </tr>
                  <tr>
                    <td>Start Date:</td>
                    <td><%= @order.start_date %></td>
                  </tr>
                  <tr>
                    <td>End Date:</td>
                    <td><%= @order.end_date %></td>
                  </tr>
                  <% if @order.promo_code.blank? == false %>
                    <tr>
                      <td>Promo Code:</td>
                      <td><%= @order.promo_code %></td>
                    </tr>
                  <% end %>

                  <% if @order.family_type == "Couple" or @order.family_type == "Family" %>
                  <tr>
                    <td>Partner Title:</td>
                    <td><%= @order.partner_title %></td>
                  </tr>
                  <tr>
                    <td>Partner First Name:</td>
                    <td><%= @order.partner_fn %></td>
                  </tr>
                  <tr>
                    <td>Partner Last Name:</td>
                    <td><%= @order.partner_ln %></td>
                  </tr>
                  <tr>
                    <td>Partner Gender:</td>
                    <td><% if @order.partner_gender == "1" %>
                        <%= "Male" %>
                        <% else %>
                        <%= "Female" %>
                        <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td>Partner Date of Birth:</td>
                    <td><%= @order.partner_dob %></td>
                  </tr>
                  <%end%>
                  <% if @order.family_type == "Family" or @order.family_type == "Single Parent Family" 
                    @i = 1;
                     if @defedent_detail.blank? == false
                        @defedent_detail.each do |d|
                    %>
                  <tr>
                      <td><b>Dependent <%= @i %></b></td>
                      <td></td>
                  </tr>  
                  <tr>
                    <td>Dependent Title:</td>
                    <td><%= d.title %></td>
                  </tr>
                  <tr>
                    <td>Dependent First Name:</td>
                    <td><%= d.first_name %></td>
                  </tr>
                  <tr>
                    <td>Dependent Last Name:</td>
                    <td><%= d.last_name %></td>
                  </tr>
                  <tr>
                    <td>Dependent Gender:</td>
                    <td><% if d.gender == "1" %>
                        <%= "Male" %>
                        <% else %>
                        <%= "Female" %>
                        <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td>Dependent Date of Birth:</td>
                    <td><%= d.date_of_birth %></td>
                  </tr>
                    <% 
                        @i = @i + 1;
                        end
                      end                     
                    end
                   %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
