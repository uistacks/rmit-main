<% provide(:title, "Transaction") %>
<div id="page-wrapper" class="gray-bg">
  <%= render "admin/includes/header" %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= admin_dashboard_url %>">Dashboard</a>
        </li>
        <li class="active">
          <strong>Manage Credit</strong>
        </li>
      </ol>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <%= stylesheet_link_tag 'admin/plugins/dataTables/datatables.min.css' %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Manage Credit</h5>
            <div class="ibox-tools credit">
            <b>Total Credit: $<% if @total_credit.total_credit.blank? == false %><%= convert(@total_credit.total_credit.round(2)) %><% else %> 0.00<% end %></b>
            </div>
          </div>
          <div class="ibox-content">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                  <tr>
                    <th>From</th>
                    <th>Amount($)</th>
                    <th>Date</th>
                    <!-- <th>Total Credit($)</th> -->
                  </tr>
                </thead>
                <% t = Time.now %>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                  <% if @credit_list.blank? == false %>
                  <% @credit_list.each do |cr| %>
                  <tr>
                    <td ><%= cr.from_user %></td>
                    <td><%= cr.credit_amount %></td>
                    <td><%= cr.created_at.strftime(@date_format) %></td>
                  </tr>
                  <% end %>
                  <!-- <tr>
                    <td colspan="2" align="right"><b>Total Credit:</b></td>
                    <td colspan="2" align="left"><b></b></td>
                  </tr> -->
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%= render "admin/includes/footer" %>
</div>
<%= javascript_include_tag 'admin/plugins/dataTables/datatables.min.js' %>
<script>
$(document).ready(function(){
  $('.dataTables-example').DataTable({
  });
});
</script>