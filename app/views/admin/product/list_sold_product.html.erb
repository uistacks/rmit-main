<% provide(:title, "Product") %>
<div id="page-wrapper" class="gray-bg">
  <%= render "admin/includes/header" %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= admin_dashboard_url %>">Dashboard</a>
        </li>
        <li class="breadcumb">
          <a href="<%= admin_product_list_url %>">Manage Products</a>
        </li>
        <li class="active">
          <strong>Manage Sold Products</strong>
        </li>
      </ol>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <%= stylesheet_link_tag 'admin/plugins/dataTables/datatables.min.css' %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Manage Sold Products</h5>
            <div class="ibox-tools">
               <!-- <a href="<%#= admin_add_product_url() %>" class="btn btn-primary btn-xs" title="Add Product"> <i class="fa fa-plus"></i> Add Product</a> -->
              <!-- <button type="button" class="btn btn-sm btn-success btn-xs" data-toggle="modal" data-target="#myModal4"><i class="fa fa-plus"></i> Import Product</button> -->
            </div>
          </div>
          <div class="ibox-content">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                <tr>
                  <th>Order Date</th>
                  <th>Name</th>
                  <th>User Email</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Amount</th>
                </tr>
                </thead>
                <% t = Time.now %>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                <% @i = 1 %>
                <% @sold_product.each do |p| %>
                    <tr>
                      <td>
                        <% if p.created_at %>
                            <%= p.created_at %>
                        <% else %>
                            ---
                        <% end %>
                      </td>
                      <td ><%= p.name.to_s+" "+p.surname.to_s %></td>
                      <td ><%= p.email_address %></td>
                      <td >
                        <% if p.start_date %>
                        <%= p.start_date %>
                        <% else %>
                            ---
                        <% end %>
                      </td>  
                      <td >
                        <% if p.end_date %>
                        <%= p.end_date %>
                        <% else %>
                              ---
                        <% end %>
                      </td>
                      <td><%= p.order_amt %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "admin/includes/footer" %>
</div>

<%= javascript_include_tag 'admin/jquery.validate-1.14.0' %>
<%= javascript_include_tag 'admin/plugins/dataTables/datatables.min.js' %>
<script>
  $(document).ready(function(){
    $('.dataTables-example').DataTable({
    });
   });  
</script>

