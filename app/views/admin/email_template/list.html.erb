<% provide(:title, "Email Template") %>
<div id="page-wrapper" class="gray-bg">
  <%= render "admin/includes/header" %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= admin_dashboard_url %>">Dashboard</a>
        </li>
        <li class="active">
          <strong>Manage Email Template</strong>
        </li>
      </ol>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <%= stylesheet_link_tag 'admin/plugins/dataTables/datatables.min.css' %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Manage Email Template</h5>
            <div class="ibox-tools">
              <!-- <a href="<%= admin_role_add_url %>" class="btn btn-primary btn-xs" title="Add CMS Page"> <i class="fa fa-plus"></i> Add CMS Page</a> -->
            </div>
          </div>
          <div class="ibox-content">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                  <tr>
                    <!-- <th>No.</th> -->
                    <th>Title</th>
                    <th>Subject</th>
                    <th>Created At</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <% t = Time.now %>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                  <%# @i = 1 %>
                  <% @email_template.each do |e| %>
                  <tr>
                    <!-- <td width="10%"># <%#= @i %></td> -->
                    <td ><%= e.email_template_title %></td>
                    <td ><%= e.email_template_subject %></td>
                    <td>
                      <% if e.created_at %>
                      <%= e.created_at.strftime(@date_format) %>
                      <% else %>
                      ---
                      <% end %>
                    </td>
                    <td class="">
                      <%= link_to admin_email_template_edit_url(:email_id => Base64.encode64(e.id.to_s)), :class=>'btn btn-success btn-xs', :title =>"Edit Email Template" do %>
                      <i class="fa fa-pencil-square"></i> Edit
                      <% end %>
                      <%= link_to admin_edit_email_template_multilang_url(:temp_title => Base64.encode64(e.email_template_title.to_s)), :class=>'btn btn-success btn-xs', :title =>"Multilanguage" do %>
                      <i class="fa fa-pencil-square"></i> Multilanguage 
                      <% end %>
                    </td>
                  </tr>
                  <%# @i = @i + 1 %>
                  <% end %>
                </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
</div>
</div>
<%= render "admin/includes/footer" %>
</div>
<%= javascript_include_tag 'admin/plugins/dataTables/datatables.min.js' %>
<script>
$(document).ready(function(){
  $('.dataTables-example').DataTable({
});
});
</script>
