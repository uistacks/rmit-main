  <% if @user_type.to_s == "4" %>
  <a href="<%= admin_add_user_url(:type => @user_type.to_s) %>" class="btn btn-primary btn-xs" title="Add Insurance Company"> <i class="fa fa-plus"></i> Add Insurance Company</a>
  <% else %>
  <a href="<%= admin_add_user_url(:type => @user_type.to_s) %>" class="btn btn-primary btn-xs" title="Add New <%= @page_title %>"> <i class="fa fa-plus"></i> Add <%= @page_title %></a>
  <% end %>
</div>
</div>
<div class="ibox-content">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example" >
      <thead>
        <tr>
          <th>No.</th>
          <th>Username</th>
          <% if @user_type == "3" %>
          <th>Referral Code</th>
          <% end %>
          <th>User Email</th>
          <th>Active</th>
          <th>Created At</th>
          <th>Action</th>
        </tr>
      </thead>
      <% t = Time.now %>
      <tbody role="alert" aria-live="polite" aria-relevant="all">
        <% @i = 1 %>
        <% @user.each do |u| 
            if @user_type.to_s == u.user_type.to_s
          %>
        <tr>
          <td width="10%"># <%= @i %></td>
          <td ><%= u.user_name %></td>
          <% if @user_type == "3" %>
          <td ><%= (!u.promo_code.blank?)? u.promo_code : "---" %></td>
          <% end %>
          <td ><a href="mailto:<%= u.user_email %>"><%= u.user_email %></a></td>
          <td>
            <% if u.user_status.to_s == "0" %>
            <div> <a style="cursor:default;" class="label label-warning" href="javascript:void(0);" id="status_#{u.id}">Inactive</a>
            </div>
            <% else %>
            <div id="active_div#{u.id}"  <% if u.user_status.to_s == "1" %>style="display:inline-block" <% else %> style="display:none;" <% end %>>

              <%= link_to "Active", "javascript:void(0);",class: "label label-success", title: "Click to Change Status", onClick: "changeStatus('#{u.id}', 2);" %>
            </div>

            <div id="blocked_div#{u.id}" <% if u.user_status.to_s == "2" %>style="display:inline-block" <% else %> style="display:none;" <% end %>>
              <%= link_to "Banned", "javascript:void(0);",class: "label label-danger", title: "Click to Change Status", onClick: "changeStatus('#{u.id}', 1);" %>
            </div>
            <% end %>
          </td>
          <td>
            <% if u.created_at %>
            <%= u.created_at.strftime(@date_format) %>
            <% else %>
            ---
            <% end %>
          </td>
          <td class="">
            <%= link_to admin_user_edit_url(:user_id=>Base64.encode64(u.id.to_s),:type => @user_type), :class=>'btn btn-success btn-xs', :title =>"Edit Profile" do %>
            <i class="fa fa-pencil-square"></i> Edit
            <% end %>
            <%= link_to admin_user_show_url(:user_id=>Base64.encode64(u.id.to_s),:type => @user_type), :class=>'btn btn-success btn-xs', :title =>"View Full Profile" do %>
            <i class="fa fa-eye"></i> View
            <% end %>
            <% if @user_type.to_s == "3" %>
              <%= link_to admin_promoter_credit_url(:user_email=>Base64.encode64(u.user_email.to_s),:type => @user_type), :class=>'btn btn-success btn-xs', :title =>"View Credit" do %>
                <i class="fa fa-eye"></i> Credit
              <% end %>
            <% end %>
            <%= link_to admin_destroy_user_url(:user_id=>Base64.encode64(u.id.to_s),:type => @user_type), :class=>'btn btn-danger btn-xs', :title =>"Delete User", :onClick => 'return confirm("Are you sure that you want to delete this user?");' do %>
            <i class="fa fa-trash"></i> Delete
            <% end %>
            <% if @user_type.to_s == "4" %>
                <%= link_to admin_product_list_url(:user_id => Base64.encode64(u.id.to_s),:type => @user_type), :class=>'btn btn-success btn-xs', :title =>"Product" do %>
                <i class="fa fa-th-large"></i> Product
                <% end %>
            <% end %>    
          </td>
        </tr>
        <%
        end
        %>
        <% @i = @i + 1 %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
</div>
</div>
</div>
</div>
<%= render "admin/includes/footer" %>
</div>
