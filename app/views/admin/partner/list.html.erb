<% provide(:title, "Partner") %>
<div id="page-wrapper" class="gray-bg">
  <%= render "admin/includes/header" %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= admin_dashboard_url %>">Dashboard</a>
        </li>
        <li class="active">
          <strong>Manage Partner</strong>
        </li>
      </ol>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <%= stylesheet_link_tag 'admin/plugins/dataTables/datatables.min.css' %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Manage Partner</h5>
            <div class="ibox-tools">
              <!-- <a href="<%= admin_add_partner_url %>" class="btn btn-primary btn-xs" title="Add FAQ's"> <i class="fa fa-plus"></i> Add Partner</a> -->
            </div>
          </div>
          <div class="ibox-content">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                  <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Logo</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <% t = Time.now %>
                <tbody role="alert" aria-live="polite" aria-relevant="all">
                  <% @i = 1 %>
                  <% if @partner.blank? == false %>
                  <% @partner.each do |f| %>
                  <tr>
                    <td width="10%"># <%= @i %></td>
                    <td ><%= f.partner_name %></td>
                    <td ><% if f.logo.blank? == false %>
                     		<%= image_tag("/partner_logo/"+(f.logo) ,:alt => "partner_logo",:width => "100") %>
                     	<% else %>	
                     	<%= "---" %>	                 
                    	<% end %>
                    </td>
                    <td>
                      	<div id="active_div#{f.id}"  <% if f.status == '1' %>style="display:inline-block" <% else %> style="display:none;" <% end %>>
            							<%= link_to "Active", "javascript:void(0);",class: "btn btn-primary btn-xs", title: "Click to Change Status", onClick: "changeStatus('#{f.id}', '0');" %>		
            						</div>
            						<div id="blocked_div#{f.id}" <% if f.status == '0' %>style="display:inline-block" <% else %> style="display:none;" <% end %>>
            							<%= link_to "Inactive", "javascript:void(0);",class: "label label-danger", title: "Click to Change Status", onClick: "changeStatus('#{f.id}', '1');" %>			
            						</div>
                    </td>
                    <td class="">
                        <%= link_to admin_edit_partner_url(:partner_id => Base64.encode64(f.id.to_s)), :class=>'btn btn-success btn-xs', :title =>"Edit Partner" do %>
                        <i class="fa fa-pencil-square"></i> Edit
                        <% end %>
                        <%#= link_to admin_destroy_partner_url(:partner_id => Base64.encode64(f.id.to_s)), :class=>'btn btn-danger btn-xs', :title =>"Delete Partner", :onClick => 'return confirm("Are you sure that you want to delete this partner?");' do %>
                      <!-- <i class="glyphicon glyphicon-trash"></i> Delete
                       <%# end %> -->
                    </td>
                  </tr>
                  <% @i = @i + 1 %>
                  <% end %>
                  <% end %>
                </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
</div>
</div>
<%= render "admin/includes/footer" %>
</div>
<%= javascript_include_tag 'admin/plugins/dataTables/datatables.min.js' %>
<script>
$(document).ready(function(){
  $('.dataTables-example').DataTable({
});
});
</script>
<script type="text/javascript">
	function changeStatus(partner_id, status)
	{                
		/* changing the user status*/
		var obj_params = new Object();
		obj_params.partner_id = partner_id;
		obj_params.status = status;
		jQuery.get("<%= admin_change_partner_status_url %>", obj_params, function(msg) {
			if (msg.error == "1")
			{
				alert(msg.error_message);
			}
			else
			{
				location.href=location.href;                        
			}
		}, "json");

	}
</script>